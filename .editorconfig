# Root EditorConfig for DNDGame MAUI / .NET solution
# Aligns with guidelines in .github/instructions.md
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# files
[*.cs]
# Language version hint (for analyzers tooling)
# (Most IDEs infer from project; kept for clarity.)
dotnet_language_version = latest

# Nullable reference types
# Enabled in project files; enforce usage expectations.
dotnet_style_null_checking_preference = implicit_object_null_checks:none

# File-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion

# Var usage
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Expression-bodied members (prefer concise)
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_operators = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = when_on_single_line:suggestion
csharp_style_expression_bodied_local_functions = when_on_single_line:suggestion

# Pattern matching & modern constructs
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_prefer_pattern_matching = true:suggestion

# Using directives placement
csharp_using_directive_placement = outside_namespace:suggestion

# Qualification
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# Parentheses & readability
dotnet_style_parentheses_in_arithmetic_binary_operators = never_if_unnecessary:silent
dotnet_style_parentheses_in_other_binary_operators = never_if_unnecessary:silent
dotnet_style_parentheses_in_relational_binary_operators = never_if_unnecessary:silent

# New line preferences
csharp_new_line_before_open_brace = all

# Prefer readonly
dotnet_style_readonly_field = true:suggestion

# Prefer nameof over string literals
dotnet_style_prefer_nameof_expression = true:warning

# Prefer collection expressions (C# 12)
csharp_style_prefer_collection_expression = true:suggestion

# Prefer required members usage
csharp_style_required_member_syntax = true:suggestion

# Prefer ranged index
csharp_style_prefer_index_operator = true:suggestion
csharp_style_prefer_range_operator = true:suggestion

# Discards
csharp_style_unused_value_assignment_preference = discard_variable:suggestion
csharp_style_unused_value_expression_statement_preference = discard_variable:suggestion

# Using directive sorting
dotnet_sort_system_directives_first = true

# Naming rules
# -------------------------------------------------
# Symbols: public types & members => PascalCase
# Private fields => _camelCase
# Constants (public/private) => PascalCase
# Async methods => PascalCase (suffix Optional: 'Async')

# Style definitions
dotnet_naming_style.pascal_case_style.capitalization = PascalCase
dotnet_naming_style.camel_case_style.capitalization = CamelCase
dotnet_naming_style.prefix_underscore_style.capitalization = CamelCase
dotnet_naming_style.prefix_underscore_style.required_prefix = _

# Symbol groups
dotnet_naming_symbols.public_members.applicable_accessibilities = public
# Classes, structs, records, enums, interfaces
#---------------------------------------------
dotnet_naming_symbols.public_types.applicable_accessibilities = public
dotnet_naming_symbols.public_types.applicable_kinds = class, struct, interface, enum, record

# Private fields
#---------------------------------------------
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
Dotnet_naming_symbols.private_fields.applicable_kinds = field

# Async methods
#---------------------------------------------
dotnet_naming_symbols.async_methods.applicable_kinds = method

# Naming rules
# Public types -> PascalCase
dotnet_naming_rule.public_types_rule.symbols = public_types
dotnet_naming_rule.public_types_rule.style = pascal_case_style
dotnet_naming_rule.public_types_rule.severity = suggestion

# Public members -> PascalCase
dotnet_naming_rule.public_members_rule.symbols = public_members
dotnet_naming_rule.public_members_rule.style = pascal_case_style
dotnet_naming_rule.public_members_rule.severity = suggestion

# Private fields -> _camelCase
dotnet_naming_rule.private_fields_rule.symbols = private_fields
dotnet_naming_rule.private_fields_rule.style = prefix_underscore_style
dotnet_naming_rule.private_fields_rule.severity = suggestion

# Async methods -> PascalCase (Optional 'Async' - not enforced here)
dotnet_naming_rule.async_methods_rule.symbols = async_methods
dotnet_naming_rule.async_methods_rule.style = pascal_case_style
dotnet_naming_rule.async_methods_rule.severity = suggestion

# Analyzer severities (raise important style to warnings)
# ------------------------------------------------------
# Avoid unused variables
dotnet_diagnostic.CS0168.severity = warning
# Nullability issues
# (Project enabling will surface these; keep default severity)

# Treat some code style as warning for enforcement
# nameof usage already set; add unused usings
dotnet_diagnostic.IDE0005.severity = warning

# Remove unnecessary casts
dotnet_diagnostic.IDE0004.severity = suggestion

# Use expression-bodied members where configured
dotnet_diagnostic.IDE0022.severity = suggestion

# Prefer auto-properties
dotnet_diagnostic.IDE0032.severity = suggestion

# Require 'var' usage per preferences
# (IDE suggestions manage severity)

# End of file
